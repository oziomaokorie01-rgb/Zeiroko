# Server
PORT=4000
FRONTEND_URL=http://localhost:3000
JWT_SECRET=replace_with_strong_random
JWT_EXPIRES_IN=7d

# MongoDB Atlas (replace <user>,<pass>,<cluster>,<dbname>)
MONGO_URI=mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/zeiroko?retryWrites=true&w=majority

# Gmail (for nodemailer) - create an App Password if using Gmail + 2FA
EMAIL_USER=youremail@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM="Zeiroko <youremail@gmail.com>"

# OAuth (Google/Twitter)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:4000/auth/google/callback

TWITTER_CONSUMER_KEY=your_twitter_consumer_key
TWITTER_CONSUMER_SECRET=your_twitter_consumer_secret
TWITTER_CALLBACK_URL=http://localhost:4000/auth/twitter/callback

# WalletConnect / RPC (client side will use projectId / provider)
WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Optional: TWITTER_BEARER_TOKEN for server-side metrics
TWITTER_BEARER_TOKEN=your_twitter_bearer_token